@model MVCProject.Models.ImageData;

@{
    ViewData["Title"] = "GetImage";
}

<h2>GetImage</h2>

<div class="row">
    <div class="form-group col-sm-8">
        <form asp-action="addimage" asp-controller="Gallery" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Caption" class="control-label col-sm-1">Caption</label>
                <input type="text" name="Caption" class="input-group" />
            </div>
            <div class="form-group">
                <label for="Caption" class="control-label col-sm-1">Description</label>
                <input type="text" name="Description" class="input-group" />
            </div>
            <div class="form-group">
                <label for="Upload" class="control-label col-sm-1">Upload File</label>
                <input type="file" name="file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>

</div>
<div class="table-bordered " style="padding:10px;border:1px solid black">
    <div class="row">
        <div class="col-sm-2 text-primary">
            <span>Image</span>
        </div>
        <div class="col-sm-2 text-primary">
            <span>Description</span>
        </div>
        <div class="col-sm-2 text-primary">
            <span>File Url</span>
        </div>
        <div class="col-sm-2 text-primary">
            <span>Posted By</span>
        </div>
        <div class="col-sm-2 text-primary">
            <span>Posted Date</span>
        </div>
    </div>
    <br /><br />

    @if (ViewBag.Images.Count > 0)
    {
        foreach (var item in ViewBag.Images)
        {
            <div class="row" style="border:0.1px inset;padding:20px;">
                <div class="col-sm-2">
                    <thumbnail image-path=@item.ImageUrl caption=@item.Caption></thumbnail>
                </div>
                <div class="col-sm-2">
                    <span>@item.Description</span>
                </div>
                <div class="col-sm-2">
                    <span>@item.ImageUrl</span>
                </div>
                <div class="col-sm-2">
                    <span>@item.PostedBy</span>
                </div>
                <div class="col-sm-2">
                    <span>@item.PostedDate</span>
                </div>
            </div>


        }
    }
</div>

